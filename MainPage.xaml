<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp2.MainPage"
             BackgroundColor="#121212">

    <VerticalStackLayout Padding="20" Spacing="25">

        <ImageButton x:Name="Add" Source="plus.png" WidthRequest="2" HeightRequest="2" Clicked="Add_Clicked" HorizontalOptions="End"/>

        <Border Stroke="White" StrokeThickness="1" HeightRequest="300" WidthRequest="300" HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <Image Source="arianagrande.png" />
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                <Label x:Name="AktualnaPiosenka" Text="Brak utworu" FontSize="24" TextColor="White" FontAttributes="Bold" />
                <Label Text="ImiÄ™ Nazwisko" FontSize="16" TextColor="White" Opacity="0.7" />
            </VerticalStackLayout>
            <ImageButton x:Name="shuffle" Source="shuffle.png" WidthRequest="30" HeightRequest="30" Grid.Column="1" Grid.Row="0" Clicked="shuffle_Clicked"/>
        </Grid>

        <CollectionView x:Name="ListaPiosenek" HeightRequest="100">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Title}" TextColor="White" FontSize="14" Padding="5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--
        <toolkit:MediaElement x:Name="Odtwarzacz" HeightRequest="0" WidthRequest="0" ShouldKeepScreenOn="True" />
        -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="1:57" TextColor="White" FontSize="12" Grid.Column="0" VerticalOptions="Center" />
            <Slider Grid.Column="1" HeightRequest="4" BackgroundColor="White" ThumbColor="Magenta" VerticalOptions="Center" MinimumTrackColor="Magenta" />
            <Label Text="3:15" TextColor="White" FontSize="12" Grid.Column="2" VerticalOptions="Center"/>
        </Grid>

        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,70,0,0">
            <ImageButton x:Name="cofnij" Source="cofnij.png" WidthRequest="70" HeightRequest="70" Margin="10" Clicked="cofnij_Clicked"/>
            <ImageButton x:Name="pauza" Source="pauza.png" WidthRequest="95" HeightRequest="95" Margin="10" Clicked="pauza_Clicked"/>
            <ImageButton x:Name="dalej" Source="dalej.png" WidthRequest="70" HeightRequest="70" Margin="10" Clicked="dalej_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
