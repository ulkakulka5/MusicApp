<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage"
             BackgroundColor="#121212">

    <VerticalStackLayout Padding="20" Spacing="25">


        <Border Stroke="White" StrokeThickness="1" HeightRequest="300" WidthRequest="300" HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            <Image Source="arianagrande.png" />
        </Border>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                    <Label Text="Tytuł" FontSize="24" TextColor="White" FontAttributes="Bold" />
                    <Label Text="Imię Nazwisko" FontSize="16" TextColor="White" Opacity="0.7" />
             </VerticalStackLayout>

            <Image Source="shuffle.png" WidthRequest="30" HeightRequest="30" Grid.Column="1" Grid.Row="0"/>
        </Grid>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Ellipse HeightRequest="70" WidthRequest="70" BackgroundColor="Magenta" Margin="10"/>
            <Ellipse HeightRequest="100" WidthRequest="100" BackgroundColor="Magenta" Margin="10"/>
            <Polygon Points="0,0 40,25, 0,50"  Fill="White"/>
            <Ellipse HeightRequest="70" WidthRequest="70" BackgroundColor="Magenta" Margin="10"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
